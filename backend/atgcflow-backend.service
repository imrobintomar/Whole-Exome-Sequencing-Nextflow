[Unit]
Description=ATGCFLOW Backend API Service
After=network.target

[Service]
Type=simple
User=%USER%
WorkingDirectory=/media/drprabudh/m3/Nextflow-Script/WholeExome/backend
Environment="PATH=/home/drprabudh/miniconda3/bin:/usr/bin:/usr/local/bin"
ExecStart=/home/drprabudh/miniconda3/bin/python -m uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/media/drprabudh/m3/Nextflow-Script/WholeExome/backend/logs/backend.log
StandardError=append:/media/drprabudh/m3/Nextflow-Script/WholeExome/backend/logs/backend-error.log

[Install]
WantedBy=multi-user.target
